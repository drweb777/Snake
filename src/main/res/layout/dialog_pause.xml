<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_backgraund"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/game_pause"
        android:layout_marginBottom="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_dialog_pause_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/restart"
            />
        <Button
            android:id="@+id/btn_dialog_pause_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gohome"
            />
        <Button
            android:id="@+id/btn_dialog_pause_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/play_green"
            />
    </LinearLayout>
</LinearLayout>