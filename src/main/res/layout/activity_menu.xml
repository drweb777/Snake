<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/stena"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/btn_menu_sound_play_pause"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="60dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/sound_mute"
            android:onClick="btnPlayMute"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        >
        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Новая игра"
            android:textColor="@color/colorLemonChiffon"
            android:textStyle="bold"
            android:background="@drawable/button_animation"
            />
        <Button
            android:id="@+id/btnScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Рекорды"
            android:textColor="@color/colorLemonChiffon"
            android:textStyle="bold"
            android:background="@drawable/button_animation"
            android:layout_marginTop="10dp"
            />
        <Button
            android:id="@+id/btnHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Справка"
            android:textColor="@color/colorLemonChiffon"
            android:textStyle="bold"
            android:background="@drawable/button_animation"
            />
        <Button
            android:id="@+id/btnExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Выход"
            android:textColor="@color/colorLemonChiffon"
            android:textStyle="bold"
            android:background="@drawable/button_animation"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
    </LinearLayout>
</LinearLayout>